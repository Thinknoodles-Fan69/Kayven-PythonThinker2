import random  
heroHealth = 100
heroBattles = 0
print("Hero starts on his adventure with Health: " + str(heroHealth))
while True:
    while heroHealth != 0:
        heroHealth -= random.randint(1, 15)
        print("After fighting monsters, his Health is now: " + str(heroHealth))
        heroBattles += 1
    if heroHealth <= 0:
        print("He fought " + heroBattles + " battles, and died.")


